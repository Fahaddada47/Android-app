<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".About">




  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:layout_margin="30dp"
      app:cardCornerRadius="40dp"
      app:cardElevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/fahad"
          ></ImageView>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Fahad Islam"
          android:textSize="36sp"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textColor="@color/Lavender"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginLeft="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/link"

              >

          </ImageView>



      <TextView
          android:id="@+id/linked1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="  www.linkedin.com/in/fahad-islam/"
          >

      </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/git">

          </ImageView>
      <TextView
          android:id="@+id/git1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="  https://github.com/Fahaddada47"
          >
      </TextView>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
















  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="300dp"
      android:layout_margin="30dp"
      app:cardCornerRadius="40dp"
      app:cardElevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/pappu"
          ></ImageView>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Shoeb Sikder"
          android:textSize="36sp"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textColor="@color/Lavender"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginLeft="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/link"

              >

          </ImageView>



          <TextView
              android:id="@+id/linked2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="  www.linkedin.com/in/shoebsikder/"
              >

          </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/git">

          </ImageView>
          <TextView
              android:id="@+id/git2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="  https://github.com/Shoeb1989"
              >
          </TextView>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </androidx.cardview.widget.CardView>


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="150dp"
      android:layout_marginTop="70dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="...version   22.6.12..."
        android:textColor="@color/white"></TextView>
  </LinearLayout>
















